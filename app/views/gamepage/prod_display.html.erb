<h1>Games</h1>
 
 <%= render partial: 'common/header' %>


<% @product.each do |product| %>
<div class="products">
	<h2> <%= product.name %></h2>
	<p><%= image_tag product.image %></p>
	<p><%= product.description %></p>
	<p>Price: $<%= product.price %></p>
	<p>Stock: <%= product.stock_quantity %></p>
	<p>Date released: <%= product.released %></p>
	<%= button_to 'Add to cart', {:controller => "cart", :action => "this_cart", :id => product.id} , :method=>:post  %>
	</div>
<% end %>
